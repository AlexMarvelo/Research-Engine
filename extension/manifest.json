{
    "manifest_version": 2,
    "name": "WorldBrain - The (Re)search-Engine",
    "short_name":"WorldBrain",
    "description": "Full-Text search your browser history! To activate, type 'w' + 'tab/space' into the address bar. Results are in the drop-down.",
    "version": "0.0.0.8",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["js/lib/stopwords_res.js", "js/lib/readability.js", "js/relevanttext.js", "js/content.js"]
        }
    ],
    "permissions": [
        "unlimitedStorage",
        "<all_urls>",
        "storage",
        "tabs",
        "history",
        "bookmarks"
    ],
    "browser_action": {
        "default_icon": {
            "19": "assets/19.png",
            "38": "assets/38.png"
          },
        "default_popup": "assets/popup.html"
    },
    "icons": {
        "16": "assets/16.png",
        "48": "assets/48.png",
        "128": "assets/128.png"
    },
    "omnibox": { "keyword" : "w" },
    "options_page": "assets/preferences.html",
    "background": {
        "scripts": ["js/blacklist2.js", "js/lib/chrono.min.js", "js/textprocessing.js", "js/queryparser.js", "js/background.js", "js/lib/readability.js", "js/lib/lodash.js"]
    }
}
